@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Portfolio App</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Site Styles -->
    <link href="~/Content/Site.css" rel="stylesheet" />

    <style>
        /* Estilo LinkedIn */
        .navbar-custom {
            background-color: #0A66C2; /* Azul LinkedIn */
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: white !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #dcecff !important;
                }

        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>

    <!-- NAVBAR ESTILO LINKEDIN -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top shadow-sm">
        <div class="container">

            <!-- BRAND / LOGO -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <strong>Portfolio App</strong>
            </a>

            <!-- Button responsive -->
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAV ITEMS -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">

                    <!-- LINKS GENERALES -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">Acerca de</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                    </li>

                    <!-- SECCIONES DEL CURRICULUM -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "StudentProfiles")">Perfil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Education")">Educación</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Experience")">Experiencia</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Skills")">Habilidades</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Projects")">Proyectos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "SocialLinks")">Social</a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>


    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center mt-5 mb-3 text-muted">
        © @DateTime.Now.Year - Portfolio App
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
