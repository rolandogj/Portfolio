@model Portfolio.Models.Skills

@{
    ViewBag.Title = "Add Skill";
}

<h2>Add Skill</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Level)
            @Html.TextBoxFor(m => m.Level, new { @class = "form-control", type = "number" })
        </div>

        <div class="form-group">
            @Html.Label("Student")
            @Html.DropDownList("StudentProfileId", null, "-- Select --", new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>

    </div>
}

<p>@Html.ActionLink("Back to List", "Index")</p>
