@model IEnumerable<Portfolio.Models.StudentProfile>

@{
    ViewBag.Title = "Student Profiles";
}

<h2>Student Profiles</h2>

<p>
    @Html.ActionLink("Create New Profile", "Create")
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Email</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Title</td>
            <td>@item.Email</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
