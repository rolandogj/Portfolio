@model IEnumerable<Portfolio.Models.Education>

@{
    ViewBag.Title = "Education";
}

<h2>Education</h2>

<p>
    @Html.ActionLink("Add Education", "Create")
</p>

<table class="table">
    <tr>
        <th>Institution</th>
        <th>Degree</th>
        <th>Start</th>
        <th>End</th>
        <th>Student</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Institution</td>
            <td>@item.Degree</td>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@(item.EndDate?.ToShortDateString() ?? "Present")</td>
            <td>@item.StudentProfile.FullName</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

