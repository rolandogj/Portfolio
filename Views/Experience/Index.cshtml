@model IEnumerable<Portfolio.Models.Experience>

@{
    ViewBag.Title = "Experience";
}

<h2>Experience</h2>

<p>
    @Html.ActionLink("Add Experience", "Create")
</p>

<table class="table">
    <tr>
        <th>Company</th>
        <th>Position</th>
        <th>Start</th>
        <th>End</th>
        <th>Student</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Company</td>
            <td>@item.Position</td>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@(item.EndDate?.ToShortDateString() ?? "Present")</td>
            <td>@item.StudentProfile.FullName</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

